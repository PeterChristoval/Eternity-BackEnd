<div class="container pt-4 px-4">
    <form method="post" action="/add_label" class="all-form">
        <div class="flash-data" data-flashdata="<%= status %>"></div>

        <div class="mb-3">
            <label for="label" class="form-label">Label</label>
            <input type="hidden" name="" class="status" value="created"/>
            <input autocomplete="off" autofocus type="text" class="form-control" id="label" name="label" placeholder="Product's label">
            <% if(typeof errors != 'undefined') { %>
                <% errors.forEach(error => { %>
                    <p class="text-danger mb-0 mt-1"><%= error.msg %></p>
                <% }) %>
            <% } %>
        </div>

        <button type="submit" class="btn btn-primary">Submit</button>
        <a href="/labels" class="btn btn-warning ms-3">Back</a>
    </form>
</div>