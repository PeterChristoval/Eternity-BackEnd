<div class="container pt-4 px-4">
    <% if (msg.length !== 0) { %>
        <div class="alert alert-<%= status %> alert-dismissible fade show" role="alert">
            <strong><%= msg %></strong>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    <% } %>
    <a href="add_category" class="btn btn-primary mb-4">Add Category</a>
    <% if(categories.length === 0) { %>
        <div class="card px-3 px-md-5">
            <div class="card-body d-flex justify-content-center align-items-center">
                <h5 class="" style="font-weight: normal">No data available</h5>
            </div>
        </div>
    <% } else { %>
        <div class="card px-3 px-md-5">
            <% categories.forEach(category => { %>
                <div class="card-body d-flex justify-content-between align-items-center">
                <h5 class="" style="font-weight: normal"><%= category.name %></h5>
                <form action="/delete_category/<%= category.name %>?_method=DELETE" method="post" class="d-flex flex-row">
                    <a href="/edit_category/<%= category.name %>" class="btn btn-warning me-2"><i class="bi bi-pencil-square"></i></a>
                    <button type="submit" class="btn btn-danger" onclick="return confirm('Delete <%= category.name %> ?')"><i class="bi bi-trash"></i></button>
                </form>
                </div>
            <% }); %>
        </div>
    <% } %>
</div>
