<div class="container pt-4 px-4">
    <div class="flash-status" data-flashdata="<%= status %>"></div>
    <div class="flash-msg" data-flashdata="<%= msg %>"></div>
    <a href="add_label" class="btn btn-primary mb-4">Add Label</a>
    <% if(labels.length === 0) { %>
        <div class="card px-3 px-md-5">
            <div class="card-body d-flex justify-content-center align-items-center">
                <h5 class="" style="font-weight: normal">No data available</h5>
            </div>
        </div>  
    <% } else { %>
        <div class="card px-3 px-md-5">
            <% labels.forEach((label) => { %>
                <div class="card-body d-flex justify-content-between align-items-center">
                    <h5 class="data" style="font-weight: normal"><%= label.name %></h5>
                    <input type="hidden" name="" class="status" value="deleted" />
                    <form action="/labels/<%= label.name %>?_method=DELETE" method="post" class="d-flex flex-row all-form">
                        <a href="/edit_label/<%= label.name %>" class="btn btn-warning me-2"><i class="bi bi-pencil-square"></i></a>
                        <button type="submit" class="btn btn-danger" onclick="return confirm('Delete <%= label.name %> ?')"><i class="bi bi-trash"></i></button>
                    </form>
                </div>
            <% }) %>
        </div>
    <% } %>
</div>